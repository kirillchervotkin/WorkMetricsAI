{
  "name": "bot_do",
  "version": "1.0.0",
  "description": "Telegram bot for document management system automation with natural language queries for employee work hours, project reports, and team analytics",
  "main": "dist/bot.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/bot.ts",
    "build": "tsc",
    "start": "node dist/bot.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:api": "ts-node src/tests/run-api-tests.ts",
    "test:api:specific": "ts-node src/tests/specific-tests.ts",
    "test:api:all": "npm run test:api && npm run test:api:specific"
  },
  "keywords": ["telegram", "bot", "document-management", "api", "automation", "ai", "gemini", "typescript"],
  "author": "Document Management Team",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/menu": "^1.3.0",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0",
    "grammy": "^1.36.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
